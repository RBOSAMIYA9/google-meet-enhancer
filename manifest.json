{
  "manifest_version": 3,
  "name": "Modify Google Meet Heading",
  "version": "1.0",
  "description": "A Chrome extension to modify elements on Google Meet pages, such as headings or adding fullscreen buttons to videos.",
  "permissions": ["scripting", "webNavigation"],
  "host_permissions": ["https://meet.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "/icons/icon16.png",
      "48": "/icons/icon48.png",
      "128": "/icons/icon128.png"
    }
  },
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
